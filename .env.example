# PostgreSQL (в docker-compose используется db:5432)
POSTGRES_USER=dev
POSTGRES_PASSWORD=changeme
POSTGRES_DB=smart_photo_index
DATABASE_URL=postgresql://dev:changeme@localhost:5432/smart_photo_index

# Путь к хранилищу фотографий на хосте (использовать / вместо \ на Windows)
PHOTOS_HOST_PATH=/path/to/photos

# CLIP настройки
# Модели: SigLIP, ViT-B/32, ViT-B/16, ViT-L/14
CLIP_MODEL=SigLIP
CLIP_DEVICE=cuda

# Интервал мониторинга файлов (секунды)
MONITORING_INTERVAL=300

# API настройки
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# Логирование
LOG_LEVEL=INFO
LOG_FILE=/logs/indexer.log
LOGS_HOST_PATH=./logs

# Отчеты (дубликаты и т.д.)
REPORTS_HOST_PATH=./reports
